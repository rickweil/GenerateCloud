<p id="notice"><%= notice %></p>

<h1>Businesses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Logo url</th>
      <th>Status</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.name %></td>
        <td><%= business.website %></td>
        <td><%= business.address %></td>
        <td><%= business.email %></td>
        <td><%= business.phone %></td>
        <td><%= business.logo_url %></td>
        <td><%= link_to business.status_id, "/statuses/#{business.status_id}"  %></td>
        <td><%= business.notes %></td>
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

